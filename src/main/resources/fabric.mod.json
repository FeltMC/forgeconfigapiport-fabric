{
  "schemaVersion": 1,
  "id": "forgeconfigapiport",
  "version": "${modVersion}",

  "name": "Forge Config API Port",
  "description": "Yes, you're reading that correctly. This is the whole Forge Config API ported to Fabric.",
  "authors": [
    "LexManos",
    "cpw",
    "${modAuthor}"
  ],
  "contact": {
    "homepage": "${modPageUrl}",
    "issues": "${modIssueUrl}",
    "sources": "${modSourceUrl}"
  },

  "license": "Mozilla Public License 2.0",
  "icon": "mod_logo.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.minecraftforge.ForgeConfigAPIPort"
    ],
    "client": [
      "net.minecraftforge.client.ForgeConfigAPIPortClient"
    ]
  },
  "mixins": [
    "META-INF/forgeconfigapiport.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${minFabricVersion}",
    "fabric": ">=${minFabricApiVersion}",
    "com_electronwill_night-config_core": "*",
    "com_electronwill_night-config_toml": "*",
    "minecraft": ">=${minMinecraftVersion} <${nextMinecraftVersion}",
    "java": ">=17"
  },

  "custom": {
    "modmenu": {
      "badges": [
        "library"
      ]
    }
  }
}
